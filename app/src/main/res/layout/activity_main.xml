<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.easyui.MainActivity">

    <include layout="@layout/include_top_bar"/>

    <TextView
        android:id="@+id/tv_spannable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tl1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_white_radius_3dp"
        app:tl_iconVisible="false"
        app:tl_indicator_color="#273FA6"
        app:tl_indicator_corner_radius="3dp"
        app:tl_indicator_margin_bottom="0dp"
        app:tl_indicator_margin_top="0dp"
        app:tl_indicator_style="BLOCK"
        app:tl_textSelectColor="@color/white"
        app:tl_textUnselectColor="@color/black"
        app:tl_textsize="14sp" />

    <com.flyco.tablayout.CommonTabLayout
        android:layout_marginTop="10dp"
        android:id="@+id/tl2"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/white"
        app:tl_iconHeight="30dp"
        app:tl_iconWidth="30dp"
        app:tl_indicator_height="0dp"
        app:tl_textSelectColor="#303F9F"
        app:tl_textUnselectColor="#999999"
        app:tl_textsize="12sp" />
</LinearLayout>
